<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:textSize="60dp"
            android:id="@+id/etiqueta"
            android:layout_gravity="center"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:id="@+id/layPadre"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:textSize="60dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/btnSiete"
                        ></Button>
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="match_parent"
                        android:text="8"
                        android:textSize="60dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/btnOcho"
                        ></Button>
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:textSize="60dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/btnNueve"
                        ></Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:textSize="60dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/btnCuatro"
                        ></Button>
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textSize="60dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/btnCinco"
                        ></Button>
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:textSize="60dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/btnSeis"
                        ></Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@color/colorPrimary"
                    ><Button
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textSize="60dp"
                        android:background="@color/colorPrimary"
                    android:id="@+id/btnUno"
                        ></Button>
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textSize="60dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/btnDos"
                        ></Button>
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:textSize="60dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/btnTres"
                        ></Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@color/colorPrimary"
                    ><Button
                        android:layout_width="0dp"
                        android:layout_weight="0.33"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textSize="60dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/btnCero"
                        ></Button>
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.66"
                        android:layout_height="match_parent"
                        android:text="="
                        android:textSize="60dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/btnIgual"
                        ></Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:text="/"
                    android:textSize="60dp"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/btnDiv"
                    ></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:text="*"
                    android:textSize="60dp"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/btnMult"
                    ></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:text="-"
                    android:textSize="60dp"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/btnRest"
                    ></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:text="+"
                    android:textSize="60dp"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/btnSum"
                    ></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:text="c"
                    android:textSize="60dp"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/btnBorrar"
                    ></Button>
        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:background="@color/colorAccent">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>